<!-- res/drawable/edittext_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for the background -->
            <corners android:radius="8dp" /> <!-- Adjust the radius for rounded corners if needed -->
        </shape>
    </item>
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for the background -->
            <corners android:radius="8dp" /> <!-- Adjust the radius for rounded corners if needed -->
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" /> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
